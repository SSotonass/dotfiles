#Send email
function e {
  #!/bin/bash

  if [[ "$1" = "-h" ]]; then
    echo "e body.md to_address [subject]"
    exit
  fi

  if [[ $3 = "" ]]; then
    subject=$(grep -e "#" "$1" | head -n 1 | sed 's/#//g' | sed 's/^ //g')
    if [[ $subject = "" ]]; then
      subject="En liten ting"
    fi
  else
    subject=$3
  fi

  to=$2

  pandoc -s --highlight-style kate -H ~/Documents/Scripts/Email/github-pandoc.css -f markdown -t html "$1" | \
    mutt -e "set content_type=text/html" -s "$subject" $to

}

#Open in Google Chrome
function oigc() {
  open $1 -a "Google Chrome"
}

# Convert markdown to html with syntax highlighting
function mtoh() {
  pandoc -s --highlight-style kate -H ~/Documents/Scripts/Email/github-pandoc.css -f markdown -t html "$1" | pbcopy
}

function server {
  git grep 'resources/sap-ui-core.js' -- '*.html' > .tempfile

  while read line; do

    FILE=$(echo "$line" | sed "s/:.*//") 
    CODE=$(echo "$line" | sed "s/.*://") 

    /usr/bin/open -a "/Applications/Google Chrome.app" "http://localhost:8888/$FILE"
  done < .tempfile

  rm .tempfile

  node static_server.js
}
